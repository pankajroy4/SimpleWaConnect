<div class=" flex items-center justify-center bg-gray-900 text-gray-100 min-h-screen">
  <div class="bg-gray-800 p-8 rounded-2xl shadow-lg w-full max-w-sm">
    <div class="flex items-center mb-6 space-x-2">
      <span class="text-2xl">
        <img src="https://www.svgrepo.com/show/452133/whatsapp.svg"
            class="w-7 h-7"
            alt="WhatsApp logo">
      </span>
      <h1 class="text-2xl font-semibold whitespace-nowrap overflow-hidden text-ellipsis">
        Welcome, <%= current_user&.name&.titleize %>!
      </h1>
    </div>

    <div class="bg-green-600/20 border border-green-500 text-green-300 p-3 rounded-lg text-sm text-center mb-6">
      You are successfully signed in.
    </div>

    <div class="space-y-3">
      <div class="bg-gray-700 p-3 rounded-lg text-sm">
        <p class="text-center">
          <span class="font-medium text-gray-300">Email:</span>
          <%= current_user&.email %>
        </p>
      </div>

      <%= link_to "Log out", destroy_user_session_path, class: "w-full text-sm inline-flex items-center justify-center bg-red-600 hover:bg-red-500 text-white font-medium rounded py-2 transition", data: { 'turbo-method': :delete } %>

      <%= link_to "Update Account", edit_user_registration_path, class: "w-full text-sm inline-flex items-center justify-center bg-[#4285F4] hover:bg-[#357ae8] text-white font-medium rounded py-2 transition" %>
    </div>
  </div>
</div>