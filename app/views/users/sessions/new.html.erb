<% if false %>
<%= render "users/shared/error_messages", resource: resource %>
<div class="bg-gray-800 p-8 rounded-2xl shadow-lg w-full max-w-sm">
  <div class="flex items-center mb-6 space-x-2">
    <span class="text-2xl">
      <img src="https://www.svgrepo.com/show/452133/whatsapp.svg"
          class="w-7 h-7"
          alt="WhatsApp logo">
    </span>
    <h1 class="text-2xl font-semibold">Simple WA Connect</h1>
  </div>

  <h2 class="text-gray-300 mb-4 text-sm">Sign in to your account</h2>

  <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
    <div class="space-y-3">
      <%= f.email_field :email, autofocus: true, required: true, placeholder: "Email", class: "bg-gray-700 p-2 rounded w-full text-sm" %>

      <div class="password-wrapper relative" data-controller="toggle-password">
        <%= f.password_field :password, required: true, placeholder: "Password", class: "input-field bg-gray-700 p-2 rounded w-full text-sm", id: "password-field", data: { toggle_password_target: "password" } %>
        <%= render "users/shared/toggle_password_svg" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center space-x-2 text-gray-300 text-sm">
          <%= f.check_box :remember_me, class: "h-4 w-4 rounded bg-gray-700 border border-gray-600 checked:bg-indigo-600 hover:cursor-pointer" %>
          <%= f.label :remember_me, class: "hover:text-indigo-300 cursor-pointer" %>
        </div>
      <% end %>

      <%= f.submit "Log in", class: "bg-indigo-600 hover:bg-indigo-500 cursor-pointer w-full py-2 rounded text-white font-medium" %>
    </div>
  <% end %>

  <div class="my-6 flex items-center justify-center">
    <span class="h-px w-1/4 bg-gray-700"></span>
    <span class="text-gray-500 text-sm px-2">or</span>
    <span class="h-px w-1/4 bg-gray-700"></span>
  </div>

  <div class="mt-6 text-center text-sm text-gray-400">
    <p>Don't have an account?
      <%= link_to "Sign up", new_user_registration_path, class: "text-indigo-400 hover:text-indigo-300" %>
    </p>
  </div>
</div>


<%#= render "users/shared/links" %>
<% end %>

<!-- ====================================================================================== -->

<div class="relative min-h-screen w-full flex items-center justify-center bg-cover bg-center bg-fixed" style="background-image: url('<%= asset_path("bg_image.jpg") %>');">
  <div class="absolute inset-0 bg-black/20"></div>
  <div class="overflow-hidden relative w-full max-w-sm px-8 py-16 bg-white/10 border-2 border-white backdrop-blur shadow-5xl rounded-2xl">
    <div class="absolute top-0 left-1/2 -translate-x-1/2">
      <div class="relative w-40 h-16 bg-white flex items-center justify-center rounded-b-3xl  shadow">
        <span class="text-2xl">
          <img src="https://www.svgrepo.com/show/452133/whatsapp.svg" class="w-7 h-7" alt="WhatsApp logo">
        </span>
        <span class="text-xl font-semibold text-black bg-transparent">Login</span>
        <div class="absolute -left-6 -top-1.5 w-6 h-6 bg-transparent rounded-tr-full shadow-[15px_0_0_0_white]"></div>
        <div class="absolute -right-6 -top-1.5 w-6 h-6 bg-transparent rounded-tl-full shadow-[-15px_0_0_0_white]"></div>
      </div>
    </div>

    <%= render "users/shared/error_messages", resource: resource %>
    <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
      <div class="relative mt-8">
        <%= f.email_field :email, placeholder: ".", class: "peer w-full h-14 px-6 pt-2.5 pb-1 bg-transparent border-2 border-white/40 rounded-3xl text-white focus:outline-none focus:border-white placeholder-transparent", required: true, autocomplete: "email" %>
        <label class="pointer-events-none absolute left-6 top-4 text-gray-200 transition-all peer-focus:-top-2 peer-focus:text-xs peer-focus:bg-white peer-focus:text-black peer-placeholder-shown:top-4 peer-placeholder-shown:text-base peer-not-placeholder-shown:-top-2 peer-not-placeholder-shown:text-xs peer-not-placeholder-shown:bg-white peer-not-placeholder-shown:text-black px-2 rounded">
          Email
        </label>

        <i class="bx bx-envelope absolute right-5 top-4 text-white text-xl"></i>
      </div>

      <div class="relative mt-8 password-wrapper" data-controller="toggle-password">
        <%= f.password_field :password, placeholder: "", class: "peer w-full h-14 px-6 pt-2.5 pb-1 bg-transparent border-2 border-white/40 rounded-3xl text-white focus:outline-none focus:border-white", required: true, autocomplete: "current-password", id: "password-field", data: { toggle_password_target: "password" } %>
        <label class="pointer-events-none absolute left-6 top-4 text-gray-200 transition-all peer-focus:-top-2 peer-focus:text-xs peer-focus:bg-white peer-focus:text-black peer-valid:-top-2 peer-valid:text-xs peer-valid:bg-white peer-valid:text-black px-2 rounded">
          Password
        </label>
        <%= render "users/shared/toggle_password_svg" %>
        <%#<i class="bx bx-lock-alt absolute right-5 top-4 text-white text-xl"></i> %>
      </div>
      <div class="flex justify-between items-center text-gray-200 text-sm mt-4 mb-6">
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center space-x-2">
            <%= f.check_box :remember_me, class: "h-4 w-4 bg-transparent border-white/60 hover:cursor-pointer" %>
            <%= f.label :remember_me, class: "hover:cursor-pointer hover:text-indigo-300" %>
          </div>
        <% end %>
        <%= link_to "Forgot password?", new_user_password_path, class: "text-gray-200 underline hover:text-indigo-300" %>
      </div>
      <%= f.submit "Login", class: "w-full h-12 bg-white text-black font-semibold rounded-full shadow hover:bg-gray-200 transition cursor-pointer" %>
    <% end %>

    <div class="text-center text-gray-200 mt-6 text-sm"> Don't have an account?
      <%= link_to "Register", new_user_registration_path, class: "text-gray-200 underline hover:text-indigo-300" %>
    </div>
  </div>
</div>