<% if false %>
<%= render "users/shared/error_messages", resource: resource %>
<div class="bg-gray-800 p-8 rounded-2xl shadow-lg w-full max-w-sm">
  <div class="flex items-center mb-6 space-x-2">
    <span class="text-2xl">
      <img src="https://www.svgrepo.com/show/452133/whatsapp.svg"
          class="w-7 h-7"
          alt="WhatsApp logo">
    </span>
    <h1 class="text-2xl font-semibold">Simple WA Connect</h1>
  </div>

  <h2 class="text-gray-300 mb-4 text-sm">Create a new account</h2>

  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <div class="space-y-3">
      <% if resource.respond_to?(:name) %>
        <%= f.text_field :name, autofocus: true, required: true, placeholder: "Full Name", class: "bg-gray-700 p-2 rounded w-full text-sm text-gray-100" %>
      <% end %>

      <%= f.email_field :email, required: true, placeholder: "Enter email", class: "bg-gray-700 p-2 rounded w-full text-sm text-gray-100" %>
      <div class="password-wrapper relative" data-controller="toggle-password">
        <%= f.password_field :password, required: true, placeholder: "Password (min. 6 chars)", class: "input-field bg-gray-700 p-2 rounded w-full text-sm text-gray-100", id: "password-field", data: { toggle_password_target: "password" } %>
        <%= render "users/shared/toggle_password_svg" %>
      </div>
      <div class="password-wrapper relative" data-controller="toggle-password">
        <%= f.password_field :password_confirmation, equired: true, placeholder: "Confirm Password", class: "input-field bg-gray-700 p-2 rounded w-full text-sm text-gray-100", id: "password-field", data: { toggle_password_target: "password" } %>
        <%= render "users/shared/toggle_password_svg" %>
      </div>

      <%= f.submit "Sign up", class: "bg-indigo-600 hover:bg-indigo-500 cursor-pointer w-full py-2 rounded text-white font-medium" %>
    </div>
  <% end %>

  <div class="my-6 flex items-center justify-center">
    <span class="h-px w-1/4 bg-gray-700"></span>
    <span class="text-gray-500 text-sm px-2">or</span>
    <span class="h-px w-1/4 bg-gray-700"></span>
  </div>


  <div class="mt-6 text-center text-sm text-gray-400">
    <p>Already have an account?
      <%= link_to "Log in", new_user_session_path, class: "text-indigo-400 hover:text-indigo-300" %>
    </p>
  </div>
</div>
<% end %>

