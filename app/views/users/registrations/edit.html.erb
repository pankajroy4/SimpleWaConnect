<% if false %>
<%= render "users/shared/error_messages", resource: resource %>
<div class="bg-gray-800 p-8 rounded-2xl shadow-lg w-full max-w-sm mx-auto">
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center space-x-2">
      <span class="text-2xl">
        <img src="https://www.svgrepo.com/show/452133/whatsapp.svg" class="w-7 h-7" alt="WhatsApp logo">
      </span>
      <h1 class="text-2xl font-semibold">Edit Account</h1>
    </div>

    <%= render "users/shared/back" %>
  </div>
  <h2 class="text-gray-300 mb-4 text-sm">Update your account details</h2>

  <%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
    <div class="space-y-3">
      <% if resource.respond_to?(:name) %>
        <%= f.text_field :name, autofocus: true, placeholder: "Full Name", class: "bg-gray-700 p-2 rounded w-full text-sm text-gray-100" %>
      <% end %>

      <%= f.text_field :email, placeholder: "Email", class: "bg-gray-700 p-2 rounded w-full text-sm text-gray-100" %>

      <div class="password-wrapper relative" data-controller="toggle-password">
        <%= f.password_field :password, placeholder: "New Password (Ignore to keep current)", class: "input-field bg-gray-700 p-2 rounded w-full text-sm text-gray-100", id: "password-field", data: { toggle_password_target: "password" } %>
        <%= render "users/shared/toggle_password_svg" %>
      </div>

      <div class="password-wrapper relative" data-controller="toggle-password">
        <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", class: "input-field bg-gray-700 p-2 rounded w-full text-sm text-gray-100", id: "password-field", data: { toggle_password_target: "password" } %>
        <%= render "users/shared/toggle_password_svg" %>
      </div>

      <div class="password-wrapper relative" data-controller="toggle-password">
        <%= f.password_field :current_password, placeholder: "Current Password", class: "input-field bg-gray-700 p-2 rounded w-full text-sm text-gray-100", id: "password-field", data: { toggle_password_target: "password" } %>
        <%= render "users/shared/toggle_password_svg" %>
      </div>

      <%= f.submit "Save Changes", class: "bg-indigo-600 hover:bg-indigo-500 cursor-pointer w-full py-2 rounded text-white font-medium" %>
    </div>
  <% end %>

  <div class=" text-center">
    <%= link_to "Delete my account", user_registration_path, data: { 'turbo-method': :delete, turbo_confirm: "Are you sure?"}, class: "mt-3 w-full text-sm inline-flex items-center justify-center bg-red-600 hover:bg-red-500 text-white font-medium rounded py-2 transition" %>
  </div>
</div>
<%end%>

