<!-- app/views/messages/_message.html.erb -->
<% outgoing = message.direction == "outgoing" %>
<div id="<%= dom_id(message, :message) %>" data-message-id="msg-<%= message.id %>" class="w-full mb-3 flex <%= outgoing ? 'justify-end' : 'justify-start' %>">
  <div class="relative max-w-[75%] break-words shadow-md px-2.5 py-2 text-[14px] leading-snug <%= outgoing ? 'bg-[#005C4B] text-white ml-auto rounded-xl ' : 'bg-[#202C33] text-white mr-auto rounded-xl ' %> before:content-[''] before:absolute before:w-3 before:h-3 before:rotate-45 <%= outgoing ? 'before:bg-[#005C4B] before:-right-1 before:top-3' : 'before:bg-[#202C33] before:-left-1 before:top-3'%>">

    <% media_type = message.payload["media_type"] %>
    <% if media_type.present? %>
      <% media_src =
        if message.payload["media_id"].present?
          medium_path(message.id)
        elsif message.payload["media_url"].present?
          message.payload["media_url"]
        end
      %>

      <% case media_type %>
      <% when "image" %>
        <%= image_tag media_src, class: "max-w-[240px] rounded-lg mb-2" if media_src.present? %>
      <% when "video" %>
        <% if media_src.present? %>
          <video controls class="max-w-[260px] rounded-lg mb-2 bg-black">
            <source src="<%= media_src %>" type="video/mp4">
          </video>
        <% end %>

      <% when "audio" %>
        <% if media_src.present? %>
          <div class="mb-2 bg-black/20 rounded-xl px-3 py-2 flex items-center gap-3">
            <audio controls class="h-8 flex-1 focus:outline-none">
              <source src="<%= media_src %>" type="audio/mpeg">
              Your browser does not support audio playback.
            </audio>

            <a href="<%= media_src %>" download class="text-white/70 hover:text-white text-xl">
              <i class='bx bx-download'></i>
            </a>
          </div>
        <% end %>

      <% when "document" %>
        <div class="flex items-center gap-3 p-3 mb-2 bg-black/20 rounded-xl border border-gray-200">
          <div class="w-10 h-12 bg-red-100 rounded flex items-center justify-center">
            <i class='bx bx-file text-red-500 text-2xl'></i>
          </div>

          <div class="flex-1 min-w-0">
            <p class="text-sm font-medium text-white truncate">
              <%= message.payload["filename"].presence || "Document.pdf" %>
            </p>
            <p class="text-xs text-white">1.2 MB</p>
          </div>

          <a href="<%= media_src %>" download class="text-white hover:text-gray-400">
            <i class='bx bx-download text-xl'></i>
          </a>
        </div>
      <% end %>
    <% end %>

    <% if message.payload["body_text"].present? %>
      <div class="break-words break-all overflow-hidden">
        <%= message.payload["body_text"] %>
      </div>
    <% end %>

    <% if message.payload["caption"] %>
      <div class="mt-1 opacity-90">
        <%= message.payload["caption"] %>
      </div>
    <% end %>

    <div  class="flex justify-end items-center gap-1 text-[10px] opacity-80 mt-1">
      <span><%= message.created_at.strftime("%I:%M %p") %></span>

      <% if outgoing %>
        <%= render partial: "messages/status_tick", locals: { message: message } %>
      <% end %>
    </div>
  </div>
</div>
