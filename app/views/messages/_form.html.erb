<div id="message_form" class="p-4 border-t border-gray-800 bg-gray-900" data-controller="attachment">
  <%= form_with url: customer_messages_path(customer), method: :post, multipart: true, data: { controller: "chat-form", action: "turbo:submit-start->chat-form#reset", turbo_stream: true } do |f| %>
    <div id="attachment-preview" class="mb-2 flex flex-wrap gap-3"></div>
    <div class="flex items-center space-x-3">
      <div class="relative flex-1">
        <%= f.text_area :body_text, placeholder: "Type a message", rows: 1, onkeydown: "if(event.key==='Enter' && !event.shiftKey){ event.preventDefault(); this.form.requestSubmit(); }", data: { controller: "autosize" , autosizeMaxHeightValue: 150  }, class: "w-full bg-gray-800 text-white p-3 pl-12 rounded-lg outline-none resize-none overflow-hidden leading-snug focus:outline-none focus:ring-1 focus:ring-[#055e4c]" %>

        <%= f.file_field :attachment, multiple: true, class: "hidden", id: "attachment", data: { action: "attachment#preview" } %>

        <button type="button" onclick="document.getElementById('attachment').click()" class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-200 text-xl">
          <i class='bx bx-paperclip'></i>
        </button>
      </div>

      <button type="submit" class="w-10 h-10 rounded-full bg-[#128C7E] flex items-center justify-center text-white text-xl hover:bg-[#0d6f63] transition hover:cursor-pointer">
        <i class='bx bx-send -rotate-45'></i>
      </button>
    </div>
  <% end %>
</div>
